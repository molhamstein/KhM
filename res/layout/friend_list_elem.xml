<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:gravity="center_vertical" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:focusable="false" 
    android:focusableInTouchMode="false" 
    android:descendantFocusability="blocksDescendants"
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:minHeight="70.0dip"
    android:background="@drawable/round_corners_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:layout_margin="3dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
  >
  
	    <RelativeLayout 
	        android:gravity="center_vertical"
	        android:orientation="vertical" 
	        android:layout_width="0dip" 
	        android:layout_height="match_parent" 
	        android:layout_weight="1.0">
	        
	        <CheckBox 
	            android:id="@+id/friend_checked"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="10dp"
	            android:gravity="center_vertical"
	            android:layout_centerVertical="true"
	            />
	        
	        <ImageView 
		        android:id="@+id/friend_picture" 
		        android:layout_width="50dp" 
		        android:layout_height="50dp" 
				android:src="@drawable/close"
				android:scaleType="fitXY"
				android:layout_toLeftOf="@id/friend_checked"
				android:layout_marginLeft="7dp" />
	        
	        <TextView	             
	            android:id="@+id/friend_name"
	            android:ellipsize="marquee" 
	            android:textSize="15sp"
	            android:layout_marginLeft="30dp"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:textColor="#333" 
	            android:layout_marginBottom="4.0dip" 
	            android:text="فتوح المجعص"
	            android:layout_toLeftOf="@id/friend_picture"
	            android:layout_centerVertical="true"/>
	        
		
	    </RelativeLayout>
	    
    

   
</LinearLayout>
