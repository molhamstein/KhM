<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_stage"
        android:layout_width="@dimen/simple_tour_icon_size"
        android:layout_height="@dimen/simple_tour_icon_size"
        android:layout_marginTop="25dp"
        android:src="@drawable/tour_stage1"
        android:visibility="invisible" />

    <View
        android:id="@+id/stripe"
        android:layout_width="2dp"
        android:layout_height="15dp"
        android:background="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tut_stage_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="desc desc desc"
        android:textSize="@dimen/simple_tour_font_size"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

</LinearLayout>