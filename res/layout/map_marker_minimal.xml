<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/marker_wraper_width"
    android:layout_height="@dimen/marker_wraper_height"
    android:orientation="vertical" 
    android:paddingRight="7dp"
    android:paddingLeft="7dp"
    android:paddingBottom="0dp"
    android:gravity="center_horizontal" 
    >
        
	       <TextView 
	           android:id="@+id/name"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:text="passenger Name"
	           android:gravity="center_horizontal"
	           android:layout_marginTop="7dp"
	           style="@style/txtMed"
	           android:textSize="@dimen/marker_font_size"
	           />
	       
	       
	       <View
	           android:id="@+id/sep"
	           android:layout_width="match_parent"
	           android:layout_marginLeft="20dp"
	           android:layout_marginRight="20dp"
	           android:layout_marginTop="3dp"
	           android:layout_height="2dp"
	           android:background="#44444444"
	           
	            
	           />
	       <View
	           android:id="@+id/sep2"
	           android:layout_width="match_parent"
	           android:layout_marginLeft="20dp"
	           android:layout_marginRight="20dp"
	           android:layout_marginBottom="3dp"
	           android:layout_height="2dp"
	           android:background="#44ffffff"
	           
	            
	           />
	           
	       <TextView 
	           android:id="@+id/destenation"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="Destination"
	           style="@style/txtMed"
	           android:textSize="@dimen/marker_area_font_size"
	           />
	       
	       <TextView 
	           android:id="@+id/price_req"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="0"
	           style="@style/txtMed"
	           android:textSize="@dimen/marker_font_size"
	           />
	       
	      
	        <ImageView
            android:id="@+id/marker"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            android:src="@drawable/car"
            android:layout_gravity="center_horizontal"
           
            />
	    
</LinearLayout>